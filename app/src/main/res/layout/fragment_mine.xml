<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayF7"
            tools:context="cn.sixlab.app.mineapps.ft.MineFragment">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 头像区 -->
    <LinearLayout
        android:id="@+id/user_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_mine_head">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/list_index"
                android:text="Android Studio"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_margin"
                android:id="@+id/textView"
                android:textSize="@dimen/line_title"
                android:textColor="@color/colorWhite"
                android:text="android.studio@android.com"/>
        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="70dp"
            android:layout_gravity="center|end"
            android:tint="@color/colorGrayE2"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--  -->
    <LinearLayout
        android:id="@+id/ciname"
        android:padding="@dimen/line_margin"
        android:background="@drawable/bg_white_list_e2_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/line_icon_mine"
            android:layout_height="@dimen/line_icon_mine"
            android:background="@color/colorPrimary"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_video_call_black_24dp"
            android:contentDescription="@string/apps_film_add"/>

        <TextView
            android:layout_marginLeft="@dimen/line_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/line_header"
            android:text="@string/ciname_manage"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/logout"
        android:padding="@dimen/line_margin"
        android:background="@drawable/bg_white_list_e2_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/line_icon_mine"
            android:layout_height="@dimen/line_icon_mine"
            android:background="@color/colorPrimary"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:contentDescription="@string/apps_film_add"/>

        <TextView
            android:layout_marginLeft="@dimen/line_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/line_header"
            android:text="@string/logout"/>
    </LinearLayout>





    <!---->


    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/line_margin"
        android:layout_marginBottom="@dimen/line_margin"
        android:layout_marginLeft="@dimen/head_margin_left"
        android:textSize="@dimen/line_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------------------------------------"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/line_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_mine"/>
    </LinearLayout>
</LinearLayout>

</ScrollView>